<!DOCTYPE html>
<html>
  <head>
    <title>TripTracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class='ui blue inverted compact menu'>
      <% if user_signed_in? %>
        <%= link_to 'Home', trips_path, class: 'menu item' %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'menu item' %>
        <%= link_to 'Account', edit_user_registration_path, class: 'menu item' %>
      <% else %>
        <%= link_to 'Login page', new_user_session_path, class: 'menu item' %>
      <% end %>
    </div>
    <% flash.each do |type, message| %>
      <div class='flash <%= type %>'>
        <%= message %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
