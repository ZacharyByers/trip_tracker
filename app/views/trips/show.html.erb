<h1><%= @trip.name %></h1>


  <% @trip.locations.each do |location| %>
    <h3><%= link_to location.name, trip_location_path(@trip, location) %></h3>
    <i>
      <%= link_to 'Edit', edit_trip_location_path(@trip, location), class: 'ui button tiny' %>
      <%= link_to 'Delete', trip_location_path(@trip, location),
                            method: :delete,
                            data: { confirm: 'Really Delete?' },
                            class: 'ui button negative tiny' %>
    </i>
  <% end %>
<% end %>
